{
  "manifest_version": 3,
  "name": "Swagger to Scalar",
  "description": "Automatically converts Swagger UI pages to beautiful Scalar API documentation with one click. Toggle between views anytime.",
  "version": "1.0.0",
  "author": "landenenglish",
  "homepage_url": "https://github.com/landenenglish/swagger-to-scalar",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://*/swagger/*",
    "*://*/api-docs*",
    "*://*/swagger-ui.html*",
    "*://*.swagger.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/swagger/*",
        "*://*/api-docs*",
        "*://*/swagger-ui.html*",
        "*://*.swagger.io/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ]
}
